{
  "name": "skychat",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prepare": "husky install",
    "format": "npx prettier --write .",
    "clean": "rimraf build",
    "build:css": "npx tailwindcss -i styles.css -o styles-bundle.css",
    "build:css-txt": "npx tailwindcss -i styles.css -o styles-bundle.css.txt",
    "build:site": "node ./esbuild.site.mjs",
    "build:server": "node ./esbuild.server.mjs",
    "dev": "concurrently \"PORT=3333 node --watch build/server.js\" \"npx live-server . --cors --watch . --no-browser\" \"npm run build:site -- --watch\" \"npm run build:css -- --watch\" \"npm run build:css-txt -- --watch\" \"npm run build:server -- --watch\"",
    "build": "npm run clean && npm run build:css && npm run build:css-txt && npm run build:site && npm run build:server",
    "server": "PORT=3333 node --max_old_space_size=8192 --trace-warnings build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badlogic/skychat.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/badlogic/skychat/issues"
  },
  "homepage": "https://github.com/badlogic/skychat#readme",
  "dependencies": {
    "@atproto/api": "^0.6.20",
    "@atproto/common": "^0.3.2",
    "@atproto/repo": "^0.3.3",
    "@atproto/xrpc-server": "^0.3.3",
    "@intrnl/bluesky-client": "^0.2.5",
    "@ipld/car": "^5.2.4",
    "@ipld/dag-cbor": "^9.0.6",
    "cbor-x": "^1.5.4",
    "chart.js": "^4.4.0",
    "chartjs-chart-wordcloud": "^4.3.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "easy-bsky-bot-sdk": "^0.1.2",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lit": "^2.8.0",
    "lit-html": "^2.8.0",
    "mediamask-js": "^1.1.10",
    "remixicon": "^3.5.0",
    "stopword": "^2.0.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/stopword": "^2.0.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.1.0",
    "esbuild": "^0.17.19",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.2"
  }
}
