{
  "name": "skychat",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "prepare": "husky install",
    "format": "npx prettier --write .",
    "clean": "rimraf html/build",
    "build:css": "npx tailwindcss -i html/styles.css -o html/build/styles-bundle.css",
    "build:site": "node ./esbuild.site.mjs",
    "build:worker": "node ./esbuild.worker.mjs",
    "build:server": "node ./esbuild.server.mjs",
    "dev": "concurrently \"npx tsc --noEmit --preserveWatchOutput --watch\" \"PORT=3333 node --watch build/server.js\" \"npx live-server html --cors --watch . --no-browser\" \"npm run build:site -- --watch\" \"npm run build:worker -- --watch\" \"npm run build:css -- --watch\" \"npm run build:server -- --watch\"",
    "build": "npm run build:css && npm run build:site && npm run build:worker && npm run build:server",
    "server": "PORT=3333 node --max_old_space_size=8192 --trace-warnings build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/badlogic/skychat.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/badlogic/skychat/issues"
  },
  "homepage": "https://github.com/badlogic/skychat#readme",
  "dependencies": {
    "@atproto/api": "^0.6.23",
    "@intrnl/bluesky-client": "^0.2.5",
    "@ipld/car": "^5.2.4",
    "@ipld/dag-cbor": "^9.0.6",
    "atproto-firehose": "^0.2.2",
    "better-sqlite3": "^9.1.1",
    "cbor-x": "^1.5.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^10.5.2",
    "firebase-admin": "^11.11.0",
    "husky": "^8.0.3",
    "isomorphic-ws": "github:heineiuo/isomorphic-ws",
    "lit": "^2.8.0",
    "openai": "^4.17.4",
    "remixicon": "^3.5.0",
    "sqlite3": "^5.1.6",
    "tailwindcss-animated": "^1.0.1",
    "typescript": "^5.2.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.7",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/ws": "^8.5.9",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.1.0",
    "esbuild": "^0.17.19",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.2"
  }
}